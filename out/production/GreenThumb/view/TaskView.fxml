    <TableView fx:id="taskTable" layoutY="65.0" prefHeight="334.0" prefWidth="580.0">
      <columns>
          <TableColumn fx:id="taskNameCol" prefWidth="200" text="Task Name" />
          <TableColumn fx:id="taskPointCol" prefWidth="125" text="Point Amount" />
          <TableColumn fx:id="taskTypeCol" prefWidth="148.0" text="Task Type" />
          <TableColumn fx:id="taskTotalCol" prefWidth="103.5999755859375" text="Total Count" />
      </columns>
