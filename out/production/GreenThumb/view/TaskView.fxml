            <Font name="System Bold" size="12.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
        <TextField fx:id="taskPointField" onAction="#handleTaskPointAmount" promptText="Whole Number">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </TextField>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="74.0" prefHeight="18.0" prefWidth="240.0" text="Please provide the task type:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
        <TextField fx:id="taskTypeField" onAction="#handleTaskType" promptText="1 for Community, 2 for Individual">
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor></TextField>
