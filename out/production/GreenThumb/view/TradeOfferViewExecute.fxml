<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.TradeOfferExecuteController"
            prefHeight="200.0" prefWidth="300.0">
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <Label text="Trade Offer: [Selected Offer Name]" fx:id="offerNameLabel" style="-fx-font-weight: bold;"/>
        <Separator/>

        <Label text="Select Member who will PAY the points:" />
        <ComboBox fx:id="payerComboBox" promptText="Select Payer" maxWidth="Infinity" />

        <Label text="Select Member who will RECEIVE the points (Proposer):" />
        <ComboBox fx:id="proposerComboBox" promptText="Select Proposer" maxWidth="Infinity" />

        <HBox spacing="10" alignment="CENTER_RIGHT" maxWidth="Infinity">
            <Button text="Execute Trade" fx:id="executeTradeButton" onAction="#handleExecuteTrade"  />
            <Button text="Cancel" onAction="#handleCancel" />
        </HBox>
    </VBox>
</AnchorPane>