<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.TradeOfferExecuteController"
            prefHeight="400.0" prefWidth="450.0">
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <Label text="Trade Offer: [Selected Offer Name]" fx:id="offerNameLabel" />
        <Separator/>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label fx:id="payerStatusLabel" text="Payer: (Not Selected)"/>
            <Label fx:id="proposerStatusLabel" text="Receiver (Proposer): (Not Selected)"/>
        </VBox>
        <Separator/>

        <Label text="Select Member from the Table and Assign Role:" />
        <TableView fx:id="memberTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="100"/>
                <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="100"/>
                <TableColumn fx:id="pointsColumn" text="Points" prefWidth="80"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Assign as Payer (Pays Cost)" onAction="#handleAssignPayer" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Button text="Assign as Receiver (Proposer)" onAction="#handleAssignReceiver" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        </HBox>

        <Separator/>

        <HBox spacing="10" alignment="CENTER_RIGHT" maxWidth="Infinity">
            <Button text="Execute Trade" fx:id="executeTradeButton" onAction="#handleExecuteTrade" />
            <Button text="Cancel" onAction="#handleCancel" />
        </HBox>
    </VBox>
</AnchorPane>