<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="330.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.TradeOfferExecuteController">
    <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <Label fx:id="offerNameLabel" text="Trade Offer: [Selected Offer Name]" />
        <Separator />

        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label fx:id="payerStatusLabel" text="Payer: (Not Selected)" />
            <Label fx:id="proposerStatusLabel" text="Receiver (Proposer): (Not Selected)" />
        </VBox>
        <Separator />

        <Label text="Select Member from the Table and Assign Role:" />
        <TableView fx:id="memberTable" prefHeight="102.0" prefWidth="361.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="firstNameColumn" prefWidth="100" text="First Name" />
                <TableColumn fx:id="lastNameColumn" prefWidth="100" text="Last Name" />
                <TableColumn fx:id="pointsColumn" prefWidth="89.5999816894531" text="Points" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="10">
            <Button maxWidth="Infinity" onAction="#handleAssignPayer" text="Assign as Payer" HBox.hgrow="ALWAYS" />
            <Button maxWidth="Infinity" onAction="#handleAssignProposer" text="Assign as Receiver " HBox.hgrow="ALWAYS" />
        </HBox>

        <Separator />

        <HBox alignment="CENTER" maxWidth="Infinity" prefHeight="26.0" prefWidth="212.0" spacing="10">
            <Button fx:id="executeTradeButton" onAction="#handleExecuteTrade" text="Execute Trade" />
            <Button onAction="#handleCancel" text="Cancel" textFill="RED" />
        </HBox>
    </VBox>
</AnchorPane>
