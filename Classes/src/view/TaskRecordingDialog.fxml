<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="466.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.TaskRecordingDialogController">
    <TableView fx:id="memberTable" layoutY="51.0" prefHeight="348.0" prefWidth="586.0">
        <columns>
            <TableColumn fx:id="memberFirstNameCol" prefWidth="160" text="First Name" />
         <TableColumn fx:id="memberLastNameCol" prefWidth="172.0" text="Last Name" />
            <TableColumn fx:id="memberPointAmountCol" prefWidth="113.0" text="Points" />
         <TableColumn fx:id="memberTimeSinceLastRecord" prefWidth="135." text="Days since last record" />
        </columns>
    </TableView>
   <ToolBar layoutX="8.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="46.0" prefWidth="569.0">
      <items>
          <Button fx:id="recordButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleRecord" prefHeight="36.0" prefWidth="81.0" text="Record Task" textAlignment="CENTER" />
         <DatePicker fx:id="datePicker" onAction="#handleDatePicker" />
         <ToggleButton fx:id="boostButton" mnemonicParsing="false" onAction="#toggleBoost" text="Boosted" />
         <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelTaskRecord" prefHeight="26.0" prefWidth="109.0" text="Cancel" textAlignment="CENTER" textFill="RED">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
         </Button>
      </items>
   </ToolBar>
</AnchorPane>
