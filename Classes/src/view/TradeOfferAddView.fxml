<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.TradeOfferAddController"
            prefHeight="280.0" prefWidth="350.0"> <VBox spacing="10" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

    <TextField fx:id="nameField" promptText="Trade Offer Name" onAction="#handleTradeOfferName"/>
    <TextField fx:id="costField" promptText="Cost (Positive Integer)" onAction="#handleTradeOfferCost"/>
    <TextField fx:id="descriptionField" promptText="Description" onAction="#handleTradeOfferDescription"/>
    <TextField fx:id="proposerNameField" promptText="Proposer First Name" onAction="#handleProposerFields"/>
    <TextField fx:id="proposerLastNameField" promptText="Proposer Last Name" onAction="#handleProposerFields"/>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="confirmButton" text="Add Trade Offer" onAction="#handleConfirm" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
    </HBox>
</VBox>
</AnchorPane>